<style>
  /* center the header */
  h1 {
    text-align: center;
  }

  /* style the form elements */
  form {
    margin-top: 20px;
    border: 1px solid #ccc;
    padding: 10px;
    width: 400px;
    margin: 0 auto;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }

  input[type="text"] {
    width: 100%;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 10px;
  }

  button[type="submit"],
  input[type="button"] {
    background-color: #4caf50;
    color: white;
    padding: 8px 12px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  button[type="submit"]:hover,
  input[type="button"]:hover {
    background-color: #45a049;
  }
</style>

<h1 style="text-align: center">Admit Portal</h1>

<% if (success==="added") { %>
<div
  style="
    text-align: center;
    margin: 1rem 38rem;
    padding: 0.5rem;
    background: #45a049;
  "
  class="alert alert-success"
>
  Franchisee has been Added Successfully!!
</div>
<% } %> <% if (success=="deleted") { %>
<div
  style="
    text-align: center;
    margin: 1rem 38rem;
    padding: 0.5rem;
    background: #45a049;
  "
  class="alert alert-success"
>
  Franchisee has been Deleted Successfully!!
</div>
<% } %> <% if (success=="notFound") { %>
<div
  style="
    text-align: center;
    margin: 1rem 38rem;
    padding: 0.5rem;
    background: #45a049;
  "
  class="alert alert-success"
>
  Franchisee has not Found !!
</div>
<% } %> <% if (success=="errorinadding") { %>
<div
  style="
    text-align: center;
    margin: 1rem 38rem;
    padding: 0.5rem;
    background: #45a049;
  "
  class="alert alert-success"
>
  Franchisee has already in Database or Any Error !!
</div>
<% } %>

<form action="/deleteFranchisee" method="post" name="deleteFranchisee">
  <h3>Delete Franchisee</h3>
  <label for="pincode">Enter Branch Pin-code</label>
  <input name="pincode" type="text" />
  <button type="submit">Delete Franchisee</button>
</form>

<form
  action="addFranchisee"
  method="post"
  enctype="multipart/form-data"
  name="AddFranchisee"
>
  <h3>Add Franchisee</h3>
  <label for="image">Attach Image of Franchiser</label>
  <input name="image" type="file" />
  <br />
  <br />
  <label for="name">Enter Name of Franchiser</label>
  <input name="name" type="text" />
  <label for="pincode">Enter Branch Pin-code</label>
  <input name="pincode" type="text" />
  <label for="mobile">Enter Mobile Number</label>
  <input name="mobile" type="text" />
  <label for="email">Enter Email-id</label>
  <input name="email" type="email" />
  <label for="address">Enter Branch Address</label>
  <input name="address" type="text" />
  <label for="password">Password</label>
  <input name="password" type="text" />

  <button type="submit">Add Franchisee</button>
</form>

<form action="/viewFranchisees" method="get" name="viewFranchisees">
  <button type="submit">View All Franchisee</button>
</form>
